{
  "collect": {
    "githubAction": {
      "enabled": true,
      "metadata": {
        "gh.repository": "{{env.GITHUB_REPOSITORY}}",
        "gh.run-id": "{{env.GITHUB_RUN_ID}}"
      }
    },

    "dart": {
      "include": [
        "**/dart-test*.json"
      ],
      "metadata": {}
    },

    "metadata": {
      "user": "{{env.USER}}"
    }
  },
  "report": {
    "slack": {
      "enabled": true,
      "url": "{{env.BUILDNOTE_SLACK_WEBHOOK_URL}}",
      "condition": "{{successful || failed}}",
      "title": "Dart tests {{status}} - {{env.GITHUB_WORKFLOW}} - {{env.GITHUB_RUN_ID}} (attempt: {{env.GITHUB_RUN_ATTEMPT}})"
    }

  }
}